            function showDnaDetail(mission) {
                dnaOverview.classList.add('hidden');
                dnaDetailsContainer.innerHTML = dnaContent[mission];
                dnaDetailsContainer.querySelector('.back-btn').addEventListener('click', () => {
                    dnaDetailsContainer.innerHTML = '';
                    dnaOverview.classList.remove('hidden');
                });
            }
            
            missionMedicine.addEventListener('click', () => showDnaDetail('medicine'));
            missionAgriculture.addEventListener('click', () => showDnaDetail('agriculture'));
            missionForensics.addEventListener('click', () => showDnaDetail('forensics'));

        });
    </script>
